@import './mixin'
@import './global'

#sidebar
  width 200px
  padding 0 40px 0 30px
  float left

  .logo a
    color #333
    margin-left 6px

    &:hover
      text-decoration none
      color #444

    .avatar
      float left

  .internal a
    display block
    padding-bottom 5px

#main
  float left
  width 550px

  .post
    .date
      margin 20px 0 -10px 0

  .title a
    color #000
    &:hover
      text-decoration none
      color #444
