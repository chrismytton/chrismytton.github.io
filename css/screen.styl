@import './mixin'
@import './normalize.css'
@import './syntax.css'

html, body
  margin 0
  padding 0

body
  font-family "Helvetica Neue", helvetica, arial, sans-serif
  background #fff
  color #333

  h1, h2, h3, h4, h5, h6
    line-height 1.1
    color #000

  p, pre > code
    line-height: 1.5

  a
    text-decoration none
    color #2382C8

    &:hover, &:active
      text-decoration underline

  & > header
    position fixed
    top 15px
    left 15px
    width 200px

    img
      margin 0 auto
      display block

  & > section
    margin 0 20px 0 230px
    width 550px
