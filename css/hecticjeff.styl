@import './mixin'
@import './bootstrap.css'
@import './bootstrap-responsive.css'
@import './global'
@import './syntax'

#sidebar
  .logo
    margin 20px 0
    a
      color #333
      margin-left 6px
      &:hover
        text-decoration none
        color #444
    .avatar
      float left

  nav
    display block
    line-height 1.5
    &.internal a
      font-size 14px
    &.external a
      font-size 14px

#main
  .post
    margin 20px 0 40px
    .date
      font-size 14px
      color #666
    p
      font-size 16px
      line-height 22px

  .title
    margin 10px 0
    a
      color #000
      &:hover
        text-decoration none
        color #444

  .definition
    margin-top 20px

// Smaller phones.
@media (max-width: 480px)
  body

// Larger phones (iPhone etc)
@media (max-width: 768px)
  #sidebar
    .external
      display none
    .internal li
      display inline

@media (min-width: 480px) and (max-width: 768px)
  body

@media (min-width: 768px) and (max-width: 980px)
  body

// Anything smaller than this.
@media (max-width: 980px)
  #sidebar
    .logo
      font-size 24px

/* LARGE DESKTOP SCREENS */
@media (min-width: 1200px)
  body
