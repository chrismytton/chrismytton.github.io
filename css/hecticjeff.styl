@import './mixin'
@import './normalize'
@import './global'
@import './syntax'

#sidebar
  width 200px
  padding 0 40px 0 30px
  float left

  .logo a
    color #333
    margin-left 6px

    &:hover
      text-decoration none
      color #444

    .avatar
      float left

  .internal a
    display block
    line-height 1.5

  .external a
    display block
    font-size 14px
    line-height 1.5

#main
  float left
  width 550px

  .post
    .date
      font-size 14px
      color #666
      margin 20px 0 -10px 0

  .title a
    color #000
    &:hover
      text-decoration none
      color #444
